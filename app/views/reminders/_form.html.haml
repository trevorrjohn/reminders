= form_for @reminder do |f|
  - if @reminder.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reminder.errors.count, "error")} prohibited this reminder from being saved:"
      %ul
        - @reminder.errors.full_messages.each do |msg|
          %li= msg

  = f.label :description
  = f.text_field :description
  = f.label :location
  = f.text_field :location
  = f.label :date
  = f.date_select :date

  .actions
    = f.submit 'Save'
